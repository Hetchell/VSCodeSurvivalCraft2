<CanvasWidget xmlns="runtime-namespace:Game">

	<CanvasWidget Size="600, 400" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">

		<RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />

		<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">

			<LabelWidget Font="{Fonts/Pericles}" Text="Command Guide" HorizontalAlignment="Center"/>
			
			<CanvasWidget Margin="20, 15">
				<RectangleWidget FillColor="0, 0, 0, 0" OutlineColor="128, 128, 128, 128" OutlineThickness="1" />
				<StackPanelWidget Direction="Vertical">
					<ListPanelWidget Name="Information.List" Direction="Vertical" HorizontalAlignment="Center" Margin="3, 3" SelectionColor="10, 70, 0, 90"/>
				</StackPanelWidget>
			</CanvasWidget>

			<StackPanelWidget HorizontalAlignment="Center">
				
				<BevelledButtonWidget Name="OkButton" Text="Close" Style="{Styles/ButtonStyle_160x60}"  />
				
			</StackPanelWidget>

		</StackPanelWidget>

	</CanvasWidget>

</CanvasWidget>